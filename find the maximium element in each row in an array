#include <stdio.h>

int main() {
    int rows, cols;

    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    int arr[rows][cols];
    printf("Enter elements of the array:\n");
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }
    for(int i = 0; i < rows; i++) {
        int max = arr[i][0];  
        
        for(int j = 1; j < cols; j++) {
            if(arr[i][j] > max) {
                max = arr[i][j];
            }
        }
        printf("Maximum element in row %d = %d\n", i + 1, max);
    }
    return 0;
}
