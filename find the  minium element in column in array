#include <stdio.h>

int main() {
    int rows, cols;
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);
    int arr[rows][cols];
    printf("Enter elements of the array:\n");
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }
    for(int j = 0; j < cols; j++) {
        int min = arr[0][j]; 

        for(int i = 1; i < rows; i++) {
            if(arr[i][j] < min) {
                min = arr[i][j];
            }
        }

        printf("Minimum element in column %d = %d\n", j + 1, min);
    }

    return 0;
}
